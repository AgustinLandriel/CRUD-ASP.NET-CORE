@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-dark text-white">
    <div class="card-header">
        <h5 class="text-danger">Lista de contactos</h5>
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Contacto" class="btn btn-success">Crear nuevo</a>
      <hr />

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th >Nombre</th>
                    <th >Email</th>
                    <th >Telefono</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr><td> @item.Nombre</td>
                        <td>@item.Correo</td>
                        <td>@item.Telefono</td>
                        <td><a asp-action="Editar" asp-controller="Contacto" class="btn btn-primary btn-sm" asp-route-idContacto="@item.idContacto">Editar</a></td>
                        <td><a asp-action="Eliminar" asp-controller="Contacto" class="btn btn-danger btn-sm" asp-route-idContacto="@item.idContacto">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    
    </div>
</div>

