@model UsuarioModel
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="p-3 mb-2 bg-dark text-white">Registro de cuenta</h3>
<form asp-action="Registro" asp-controller="Sesion" method="post" class="shadow-lg p-3 mb-5 bg-white rounded">
    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input asp-for="User" type="text" class="form-control">  
        <span asp-validation-for="User" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Contraseña" type="password" class="form-control">
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-warning">Registrarse</button>
    <a asp-action="Login" asp-controller="Sesion" class="btn btn-success">Ya tenes cuenta? Iniciar sesión</a>
</form>

